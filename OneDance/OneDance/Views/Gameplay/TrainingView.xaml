            </DoubleAnimationUsingKeyFrames>

            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Height)" Storyboard.TargetName="imagePictogram">
                <EasingDoubleKeyFrame KeyTime="0:0:0:0.5" Value="150"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0:0.15" Value="160"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0:0.25" Value="163"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0:0.35" Value="164"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0:0.45" Value="165"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0:0.45" Value="165"/>
            </DoubleAnimationUsingKeyFrames>

            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Width)" Storyboard.TargetName="imagePictogram">
                <EasingDoubleKeyFrame KeyTime="0:0:0:0.5" Value="150"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0:0.15" Value="160"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0:0.25" Value="163"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0:0.35" Value="164"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0:0.45" Value="165"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0:0.45" Value="165"/>
