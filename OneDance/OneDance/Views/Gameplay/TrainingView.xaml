        <Storyboard Duration="{Binding}" BeginTime="0:0:0:0" x:Key="FinishAnimation" RepeatBehavior="1x">

            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="imagePictogram">
                <EasingDoubleKeyFrame KeyTime="0:0:0:0.5" Value="1"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0:0.15" Value="0.7"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0:0.25" Value="0.5"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0:0.35" Value="0.2"/>
