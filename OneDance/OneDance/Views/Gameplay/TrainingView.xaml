            </ThicknessAnimationUsingKeyFrames>

            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Width)"  Storyboard.TargetName="imagePictogram">
                <EasingDoubleKeyFrame KeyTime="0:0:0.15" Value="148"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.30" Value="150"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.45" Value="148"/>
