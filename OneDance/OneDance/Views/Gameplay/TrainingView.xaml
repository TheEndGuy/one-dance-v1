    <Grid Height="660">
        
        <materialDesign:DialogHost Identifier="TrainingDialog"/>

        <materialDesign:DialogHost Identifier="PauseDialog"/>

        <StackPanel
            Grid.Row="0"
            Orientation="Horizontal"
            VerticalAlignment="Top"
            Background="#673AB7">

            <TextBlock
                Style="{StaticResource MaterialDesignHeadlineTextBlock}"
                Margin="560,3,0,3"
                FontSize="20"
                Foreground="White">
                <Run Text="OneDance - Treinamento"/>
            </TextBlock>
        </StackPanel>

        <!-- Ícone da avaliação -->
        <materialDesign:PackIcon
            Width="35"
		    Height="35"
		    Kind="PlaylistCheck"
            Foreground="White"
            Margin="40,40,0,0"
            Panel.ZIndex="1"/>

        <!-- Ícone da próxima pose -->
        <materialDesign:PackIcon
            Width="30"
		    Height="30"
		    Kind="SkipNext"
            Foreground="White"
            Margin="35,104,0,0"
            Panel.ZIndex="1"/>

        <!-- Ícone da pose atual -->
        <materialDesign:PackIcon
            Width="30"
		    Height="30"
		    Kind="RedoVariant"
            Foreground="White"
            Margin="35,400,0,0"
            Panel.ZIndex="1"/>

        <GroupBox
            Height="615"
            Width="230"
            FontSize="20"
            Margin="0,25,0,0" 
            Header="              Avaliação"
            HorizontalAlignment="Left">

            <StackPanel>
                <GroupBox
                    Margin="0,10,0,0"
                    VerticalAlignment="Top"
                    FontSize="18" Header="         Próxima pose"
                    Height="200"
                    Width="200">

                    <Image
                        Source="{Binding Model.NextImage}"
                        x:Name="nextPose"
                        VerticalAlignment="Center"
                        Height="140"
                        Width="200"/>
                </GroupBox>

                <Button
                    Style="{StaticResource MaterialDesignRaisedAccentButton}"
                    Command="{Binding ChangePosition}"
                    CommandParameter="Next"
                    Margin="0,10,0,0"
                    Width="150"
                    Height="30"
                    ToolTip="Avançar para a próxima pose"
                    Content="{Binding Model.ButtonText}"
                    IsEnabled="{Binding Model.NextButtonEnabled}">
                </Button>

                <GroupBox 
                    VerticalAlignment="Top"
                    Margin="0,55,0,0"
                    FontSize="18" 
                    Header="           Pose atual"
                    Height="200"
                    Width="200">

                    <Image 
                        Source="{Binding Model.CurrentImage}"
                        x:Name="remakePose" 
                        VerticalAlignment="Center"
                        Height="140"
                        Width="200"/>
                </GroupBox>

                <Button
                    Style="{StaticResource MaterialDesignRaisedAccentButton}"
                    Command="{Binding ChangePosition}"
                    CommandParameter="Remake"
                    Margin="0,10,0,0"
                    Width="150"
                    Height="30"
                    ToolTip="Refazer pose atual"
                    IsEnabled="{Binding Model.RemakeButtonEnabled}">
                    Refazer
                </Button>
            </StackPanel>
        </GroupBox>

        <Border
            Margin="0,30,5,0"
            Height="615"
            Width="1020" 
            HorizontalAlignment="Right"
            BorderBrush="LightGreen" 
            BorderThickness="3">
            <Canvas
                Margin="0,0,0,0"
                Height="610"
                Width="1015"
                HorizontalAlignment="Right"
                Name="canvasKinect"
                Background="{Binding Image}">
            </Canvas>
        </Border>
        
        <!-- Bar Image -->
        <Image 
            Source="/Images/Sequencia/Barra/Barra01.png" 
            x:Name="imageBar" 
            Height="210" 
            Width="650" 
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom" 
            Margin="0,0,-650,8" 
            d:LayoutOverrides="HorizontalAlignment"/>

        <!-- Feedback Image -->
        <Image
            Source="{Binding Model.FeedbackImage}"
            x:Name="feedbackImage"
            Height="350"
            Width="300"
            VerticalAlignment="Top"
            Opacity="0"
            HorizontalAlignment="Center"
            Margin="225,35,0,0">
        </Image>

        <!-- Pictogram Image -->
        <Image
            Source="{Binding Model.CurrentImage}" 
            x:Name="imagePictogram"
            Height="200" 
            Width="150" 
            VerticalAlignment="Bottom"
            HorizontalAlignment="Right" 
            Margin="0,0,-180,20">
        </Image>

    </Grid>
</UserControl>
