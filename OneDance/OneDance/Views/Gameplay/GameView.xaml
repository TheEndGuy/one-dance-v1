    <!-- Enter Animation -->
    <UserControl.Triggers>
        <EventTrigger RoutedEvent="Loaded">
            <BeginStoryboard Storyboard="{StaticResource AnimationImage}"/>
            <BeginStoryboard Storyboard="{StaticResource EnterScreen}"/>
            <BeginStoryboard Storyboard="{StaticResource EnterAnimation}"/>
        </EventTrigger>
    </UserControl.Triggers>

    <Grid Height="660">

        <Grid.RowDefinitions>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <materialDesign:DialogHost Grid.Row="2" Identifier="GameDialog"/>

        <materialDesign:DialogHost Grid.Row="2" Identifier="PauseDialog"/>

        <Border
            Grid.Row="1"
            Margin="0,0,0,5"
            Height="620"
            Width="1255"
            BorderBrush="LightGreen" 
            BorderThickness="3">
            <Canvas
                Margin="0,0,0,0"
                Height="615"
                Width="1250"
                Name="canvasKinect"
                Background="{Binding Image}"/>
        </Border>

        <StackPanel
            Panel.ZIndex="1"
            Orientation="Horizontal"
            VerticalAlignment="Top"
            Background="#673AB7">

            <TextBlock
                Style="{StaticResource MaterialDesignHeadlineTextBlock}"
                Margin="560,0,0,3"
                FontSize="20"
                Foreground="White"><Run Text="OneDance - Jogo"/>
            </TextBlock>
        </StackPanel>

        <!-- Bar Image -->
        <Image
            Grid.Row="1"
            Source="/Images/Sequencia/Barra/Barra01.png" 
            x:Name="imageBar" 
            Height="210" 
            Width="650" 
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom" 
            Margin="0,0,-650,8" 
            d:LayoutOverrides="HorizontalAlignment"/>

        <!-- Feedback Image -->
        <Image
            Grid.Row="1"
            Source="{Binding Model.FeedbackImage}"
            x:Name="feedbackImage"
            Height="350"
            Width="300"
            Margin="0,5,0,0"
            VerticalAlignment="Top"
            Opacity="0">
        </Image>

        <!-- Pictogram Image -->
        <Image
            Grid.Row="1"
            Source="{Binding Model.CurrentImage}" 
            x:Name="imagePictogram"
            Height="200" 
            Width="150" 
            VerticalAlignment="Bottom"
            HorizontalAlignment="Right" 
            Margin="0,0,-180,20">
        </Image>

    </Grid>
</UserControl>
