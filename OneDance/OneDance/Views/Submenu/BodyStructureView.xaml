<UserControl x:Class="OneDance.Views.BodyStructureView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             DataContext="{Binding BodyStructure, Source={StaticResource Locator}}"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1280">

    <!-- Enter Animation -->
    <UserControl.Triggers>
        <EventTrigger RoutedEvent="Loaded">
            <BeginStoryboard Storyboard="{StaticResource EnterScreen}"/>
        </EventTrigger>
    </UserControl.Triggers>

    <Grid Background="White" Height="660">

        <Grid.RowDefinitions>
            <RowDefinition Height="60"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        
        <materialDesign:Snackbar
            Grid.Row="1"
            Panel.ZIndex="1"
            VerticalAlignment="Top"
            HorizontalAlignment="Center"
            Margin="0,0,0,0"
            MessageQueue="{Binding CustomMessage}"/>

        <Image
            Panel.ZIndex="1"
            Grid.Row="0"
            Source="/Images/Registration/femur.png" 
            Height="60"
            Width="50"
            Margin="0,0,630,1"/>

        <!-- Stack Panel -->
        <StackPanel
            Grid.Row="0"
            Orientation="Horizontal"
            VerticalAlignment="Top"
            Height="61"
            Width="1280"
            Background="#673AB7" 
            materialDesign:ShadowAssist.ShadowDepth="Depth3">

            <Button
                HorizontalAlignment="Left"
                Grid.Row="0"
                Height="50"
                Width="50"
                Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}"
	            ToolTip="Voltar"
                Margin="10,0,0,0"
                Command="{Binding ChangeToStartMenu}">
                <materialDesign:PackIcon
                    Width="30"
		            Height="30"
                    Margin="0,0,3,0"
		            Kind="ArrowLeftBold" />
            </Button>

            <TextBlock
                Width="560"
                Grid.Row="0"
                Style="{StaticResource MaterialDesignHeadlineTextBlock}"
                Margin="330,5,0,3"
                FontSize="32"
                Foreground="White"><Run Text="(ETAPA 1) - IDENTIFICAÇÃO CORPORAL"/>
            </TextBlock>

            <Button
                Grid.Row="0"
                Height="50"
                Width="50"
                Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}"
	            ToolTip="Avançar"
                Margin="250,0,0,0"
                Command="{Binding ChangeToPositionsSelect}">
                <materialDesign:PackIcon
		            Width="30"
		            Height="30"
                    Margin="3,0,0,0"
		            Kind="ArrowRightBold" />
            </Button>
        </StackPanel>

        <!-- Human Body Image-->
        <Image
            Grid.Row="1"
            Source="/Images/Registration/human_body.png" 
            Stretch="UniformToFill"
            HorizontalAlignment="Center"
            Margin="350,0,0,5"
            Height="580"
            Width="580"/>

        <!-- GroupBox Information -->
        <GroupBox
            Grid.Row="1"
            HorizontalAlignment="Left"
            Height="550"
            Width="400"
            Margin="20,0,0,0"
	        materialDesign:ShadowAssist.ShadowDepth="Depth3"
	        BorderThickness="0"
            FontSize="20"
	        Header="                         ATENÇÃO !"
	        Style="{DynamicResource MaterialDesignGroupBox}">
            
            <TextBlock
                Foreground="DimGray"
		        TextWrapping="Wrap"
                Width="370">
                <TextBlock.Background>
                    <SolidColorBrush Color="#673AB7" Opacity="0.1" />
                </TextBlock.Background>
                <Run Text="Marque as opções na qual o usuário consiga ter alguma mobilidade com o membro e "/>
                <Run Text="seja capaz de executar os exercícios que serão "/>
                <Run Text="propostos."/>
                <LineBreak/><Run Text=""/>
                <LineBreak/>
                <Run Text="Após finalizar as configurações, clique no botão Avançar localizado no canto superior direito da tela para prosseguir."/>
            </TextBlock>

        </GroupBox>

        <!-- Head -->
        <ToggleButton
            Grid.Row="1"
            Height="50"
            Width="50"
            Margin="750,30,0,0"
            VerticalAlignment="Top"
            Panel.ZIndex="1"
            IsChecked="{Binding Model.Head, Mode=TwoWay}"/>
        
        <Label
            Grid.Row="1"
            Opacity="0.5"
            Height="50"
            Width="80"
            VerticalAlignment="Top"
            Margin="750,80,0,0" 
            FontSize="20" 
            FontFamily="Open Sans">
            Cabeça
        </Label>
        <!-- Head End -->

        <!-- Right Arm -->
        <ToggleButton
            VerticalAlignment="Top"
            Grid.Row="1"
            Height="50"
            Width="50"
            Margin="750,200,0,0"
            Panel.ZIndex="1" 
            IsChecked="{Binding Model.RightArm, Mode=TwoWay}"/>

        <Label
            Grid.Row="1"
            Width="140"
            Height="40"
            Opacity="0.5"
            VerticalAlignment="Top"
            Margin="760,250,0,0" 
            FontSize="20" 
            FontFamily="Open Sans">
            Braço Direito
        </Label>
        <!-- End Right Arm -->

        <!-- Right Leg -->
        <ToggleButton
            Height="50"
            Width="50"
            VerticalAlignment="Top"
            Grid.Row="1"
            Margin="750,450,0,0"
            IsChecked="{Binding Model.RightLeg, Mode=TwoWay}"/>
        
        <Label
            Grid.Row="1"
            Opacity="0.5"
            Height="40"
            Width="140"
            VerticalAlignment="Top"
            Margin="760,500,0,0" 
            FontSize="20" 
            FontFamily="Open Sans">
            Perna Direita
        </Label>
        <!-- End Right Leg -->

        <!-- Left Arm -->
        <ToggleButton
            Grid.Row="1"
            Height="50"
            Width="50"
            VerticalAlignment="Top"
            Margin="0,200,70,0"
            IsChecked="{Binding Model.LeftArm, Mode=TwoWay}"/>
        
        <Label
            Grid.Row="1"
            Opacity="0.5"
            FontSize="20"
            VerticalAlignment="Top"
            Margin="0,250,70,0"
            Width="160"
            Height="40"
            FontFamily="Open Sans">
            Braço Esquerdo
        </Label>
        <!-- End Left Arm -->

        <!-- Left Leg -->
        <ToggleButton
            Grid.Row="1"
            Height="50"
            Width="50"
            VerticalAlignment="Top"
            Margin="0,450,70,0"
            Panel.ZIndex="1"
            IsChecked="{Binding Model.LeftLeg, Mode=TwoWay}"/>
        
        <Label
            VerticalAlignment="Top"
            Height="40"
            Width="160"
            Grid.Row="1"
            Opacity="0.5" 
            Margin="0,500,70,0" 
            FontSize="20" 
            FontFamily="Open Sans">
            Perna Esquerda
        </Label>
        <!-- End Left Leg -->

    </Grid>
</UserControl>
